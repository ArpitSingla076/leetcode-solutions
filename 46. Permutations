---------------- M1 ------------------------------

class Solution {
    public static void helper(int[]nums,List<Integer> sub,boolean[] isValid,
    List<List<Integer>> ans) {
        // Base case
        if(sub.size() == nums.length) {
            List<Integer> list = new ArrayList<>();
            for(int i=0;i<sub.size();i++) {
                list.add(sub.get(i));
            }
            ans.add(list);
            return;
        }

        // kaam
        for(int i=0;i<nums.length;i++) {
            if(isValid[i] == false) { // call lagega
                sub.add(nums[i]);
                isValid[i] = true;
                helper(nums,sub,isValid,ans);
                isValid[i] = false;
                sub.remove(sub.size()-1);
            }
        }
    }

    public List<List<Integer>> permute(int[] nums) {
        List<List<Integer>> ans = new ArrayList<>();
        List<Integer> sub = new ArrayList<>();
        boolean[] isValid = new boolean[nums.length];
        helper(nums,sub,isValid,ans);
        return ans;
    }
}



--------------------- M2 ----------------------------

class Solution {
    public static void helper(int[]nums,int idx,List<List<Integer>> ans) {
        // Base case
        int n = nums.length;
        if(idx==n-1) {
            List<Integer> l = new ArrayList<>();
            for(int i=0;i<n;i++) {
                l.add(nums[i]);
            }
            ans.add(l);
            return;
        }

        // kaam
        for(int i=idx;i<n;i++) {
            swap(i,idx,nums);
            helper(nums,idx+1,ans);
            swap(i,idx,nums);
        }
    }

    public static void swap(int i,int j,int[] nums) {
        int temp = nums[i];
        nums[i] = nums[j];
        nums[j] = temp;
    }

    public List<List<Integer>> permute(int[] nums) {
        List<List<Integer>> ans = new ArrayList<>();
        helper(nums,0,ans);
        return ans;
    }
}

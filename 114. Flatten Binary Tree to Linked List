class Solution {
    public void flatten(TreeNode root) {
        if (root == null) return;

        TreeNode leftTree = root.left;
        TreeNode rightTree = root.right;

        flatten(leftTree);
        flatten(rightTree);

        root.left = null;
        root.right = leftTree;

        TreeNode temp = root;
        while (temp.right != null) {
            temp = temp.right;
        }
        temp.right = rightTree;
    }
}


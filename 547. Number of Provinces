class Solution {
    // public void dfs(int[][] isConnected,boolean[]vis,int curr) {
    //     vis[curr] = true;
    //     for(int i=0;i<isConnected[curr].length;i++) {
    //         if(isConnected[curr][i]==1 && !vis[i]) {
    //             dfs(isConnected,vis,i);
    //         }
    //     }
    // }

    public void bfs(int[][] isConnected,boolean vis[],int curr) {
        int v = isConnected.length;
        Queue<Integer> q = new LinkedList<>();
        q.add(curr);
        vis[curr]= true;
        while(!q.isEmpty()) {
            int now = q.remove();
            for(int i=0;i<isConnected[now].length;i++) {
                if(!vis[i] && isConnected[i][now]==1) {
                    q.add(i);
                    vis[i] = true;
                }
            }
        }
    }

    public int findCircleNum(int[][] isConnected) {
        int n = isConnected.length;
        int count=0;
        boolean vis[] = new boolean[n];
        for(int i=0;i<n;i++) {
            if(!vis[i]) {
                count++;
                bfs(isConnected,vis,i);
            }
        }
        return count;
    }
}





--------------------------------------------
class Solution {
    public void bfs(int[][] isConnected,boolean vis[],int curr) {
        int v = isConnected.length;
        Queue<Integer> q = new LinkedList<>();
        q.add(curr);
        vis[curr]= true;
        while(!q.isEmpty()) {
            int now = q.remove();
            for(int i=0;i<isConnected[now].length;i++) {
                int neig = isConnected[now][i];
                if(!vis[i] && neig==1) {
                    q.add(i);
                    vis[i] = true;
                }
            }
        }
    }

    public int findCircleNum(int[][] isConnected) {
        int n = isConnected.length;
        int count=0;
        boolean vis[] = new boolean[n];
        for(int i=0;i<n;i++) {
            if(!vis[i]) {
                count++;
                bfs(isConnected,vis,i);
            }
        }
        return count;
    }
}


------------------------------------------------------------------------------------------------------
(If we convert adjacency Matrix to adjacency List)

class Solution {
    public void dfs(List<List<Integer>>adjList,boolean vis[], int curr) {
        vis[curr] = true;
        for(int i=0;i<adjList.get(curr).size();i++) {
            int neig = adjList.get(curr).get(i);
            if(!vis[neig]) {
                dfs(adjList,vis,neig);
            }
        }
    }

    public int findCircleNum(int[][] isConnected) {
        int n = isConnected.length;
        List<List<Integer>> adjList = new ArrayList<>();
        
        for(int i=0;i<n;i++) {
            adjList.add(new ArrayList<>());
        }

        for(int i=0;i<n;i++) {
            for(int j=0;j<n;j++) {
                if(isConnected[i][j]==1) {
                    adjList.get(i).add(j);
                }
            }
        }

        boolean vis[] = new boolean[n];
        int count = 0;
        for(int i=0;i<n;i++) {
            if(!vis[i]) {
                count++;
                dfs(adjList,vis,i);
            }
        }
        return count;
    }
}

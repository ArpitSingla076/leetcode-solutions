class Pair{
    int row;
    int col;
    int dest;
    public Pair(int row,int col,int dest) {
        this.row = row;
        this.col = col;
        this.dest = dest;
    }
}

class Solution {
    public int[][] updateMatrix(int[][] mat) {
        int m = mat.length;
        int n = mat[0].length;
        int[][] res = new int[m][n];
        boolean[][] vis = new boolean[m][n];

        Queue<Pair> q = new LinkedList<>();
        for(int i=0;i<m;i++) {
            for(int j=0;j<n;j++) {
                if(mat[i][j]==0) {
                    q.add(new Pair(i,j,0));
                    vis[i][j] = true;
                }
                else{
                    vis[i][j] = false;
                }
            }
        }

        int drow[] = {-1,0,1,0};
        int dcol[] = {0,1,0,-1};
        while(!q.isEmpty()) {
            int row = q.peek().row;
            int col = q.peek().col;
            int dest = q.peek().dest;
            q.poll();
            res[row][col] = dest;

            for(int i=0;i<4;i++) {
                int nrow = row + drow[i];
                int ncol = col + dcol[i];
                if(nrow>=0 && nrow<m && ncol>=0 && ncol<n
                && vis[nrow][ncol]==false) {
                    q.add(new Pair(nrow,ncol,dest+1));
                    vis[nrow][ncol] = true;
                }
            }
        }
        return res;
    }
}

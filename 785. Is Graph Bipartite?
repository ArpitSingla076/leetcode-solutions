class Solution {
    public boolean isBipartite(int[][] graph) {
        Queue<Integer> q = new LinkedList<>();
        int color[] = new int[graph.length];
        for(int i=0;i<graph.length;i++) {
            color[i] = -1;
        }

        for(int i=0;i<graph.length;i++) {
            if(color[i]==-1) {
                q.add(i);
                color[i] = 0;

                while(!q.isEmpty()) {
                    int curr = q.remove();
                    for(int j=0;j<graph[curr].length;j++) {
                        int neig = graph[curr][j];
                        if(color[neig]==-1) {
                            int nextcolor = color[curr]==0? 1:0;
                            color[neig] = nextcolor;
                            q.add(neig);
                        }
                        else if(color[neig]==color[curr]) {
                            return false;
                        }
                    }
                }
            }
        }
        return true;
    }
}








--------------------------------------------------------------------------------------------------------------------------------

class Solution {
    public boolean isBipartite(int[][] graph) {
        int color[] = new int[graph.length];
        Queue<Integer> q = new LinkedList<>();
        for (int i = 0; i < graph.length; i++) {
            color[i] = -1;
        }

        for (int start = 0; start < graph.length; start++) {
            if (color[start] == -1) {
                q.add(start);
                color[start] = 0;

                while (!q.isEmpty()) {
                    int ele = q.peek();
                    q.poll();
                    for (int i=0;i<graph[ele].length;i++) {
                        int neig = graph[ele][i];
                        if (color[neig] == -1) {
                            int parCol = color[ele];
                            color[neig] = parCol == 0 ? 1 : 0;
                            q.add(neig);
                        } 
                        else if (color[neig] == color[ele]) {
                            return false;
                        }
                    }
                }
            }
        }
        return true;
    }
}



------------------------------------------ DFS APPROACH ---------------------------------------------------------------

class Solution {
    public boolean dfs(int[][]graph,int[]color,int curr,int col) {
        color[curr] = col;
        for(int i=0;i<graph[curr].length;i++) {
            int neig = graph[curr][i];
            if(color[neig]==-1) {
                if(!dfs(graph,color,neig,1-col)) {
                    return false;
                }
            }
            else if(color[neig] == color[curr]) {
                return false;
            }
        }
        return true;
    }

    public boolean isBipartite(int[][] graph) {
        int[] color = new int[graph.length];
        for(int i=0;i<graph.length;i++) {
            color[i] = -1;
        }

        for(int i=0;i<graph.length;i++) {
            if(color[i]==-1) {
                if(!dfs(graph,color,i,0)) {
                    return false;
                }
            }
        }
        return true;
    }
}

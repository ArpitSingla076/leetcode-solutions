class Solution {
    public int firstUniqChar(String s) {
        int n = s.length();
        HashMap<Character,Integer> map = new HashMap<>();
        for(int i=0;i<n;i++) {
            char ch = s.charAt(i);
            if(map.containsKey(ch)) {
                map.put(ch,map.get(ch)+1);
            }
            else{
                map.put(ch,1);
            }
        }
       for(int i=0;i<n;i++) {
        if(map.get(s.charAt(i))==1) {
            return i;
        }
       }
        return -1;
    }
}

class Solution {
    public String reverseWords(String s) {
        StringBuilder sb = new StringBuilder();
        String[] words = s.split("\\s+");
        int n = words.length;
        for(int i=n-1;i>=0;i--) {
            sb.append(words[i]);
            if(i!=0) {
                sb.append(" ");
            }
        }
        return sb.toString().trim();
    }
}


------ Without using split ----------

class Solution {
    public String reverseWords(String s) {
        s = s.trim();
        int n = s.length();
        StringBuilder sb = new StringBuilder();
        int end = n-1;
        while(end>=0){
            int start = end;
            while(start>=0 &&s.charAt(start)!=' ')start--;
            sb.append(s.substring(start+1,end+1));
            sb.append(" ");
            while(start>=0 && s.charAt(start)==' ') start--;
            end = start;
        }
        return sb.toString().trim();
    }
}

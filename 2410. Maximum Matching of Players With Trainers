class Solution {
    public int matchPlayersAndTrainers(int[] players, int[] trainers) {
        int m = players.length;
        int n = trainers.length;
        Arrays.sort(players);
        Arrays.sort(trainers);
        int i=0;
        int j=0;
        int count=0;
        while(i<m && j<n) {
            // if it can satisfy
            if(trainers[j]>=players[i]) {
                i++;
                j++;
                count++;
            }
            else{
                j++;
            }
        }
        return count;
    }
}

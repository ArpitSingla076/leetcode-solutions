class Solution {
        public void dfs(int[][]grid,int[][]vis,int row,int col) {
        int m = grid.length;
        int n = grid[0].length;
        vis[row][col] = 1;
        // check for neig(top,right,bottom,left)
        int drow[] = {-1,0,1,0};
        int dcol[] = {0,1,0,-1};
        for(int i=0;i<4;i++) {
            int nrow = row + drow[i];
            int ncol = col + dcol[i];
            if(nrow>=0 && nrow<m && ncol>=0 && ncol<n
            && vis[nrow][ncol]==0 && grid[nrow][ncol]==1) {
                dfs(grid,vis,nrow,ncol);
            }
        }
    }
    public int numEnclaves(int[][] grid) {
        int m = grid.length;
        int n = grid[0].length;
        int[][]vis = new int[m][n];

         // --- now traverse ---
        // traverse first row and last row
        for(int j=0;j<n;j++) {
            // first row
            if(vis[0][j]==0 && grid[0][j]==1) {
                dfs(grid,vis,0,j);
            }

            // last row
            if(vis[m-1][j]==0 && grid[m-1][j]==1) {
                dfs(grid,vis,m-1,j);
            }
        }

        // traverse first col and last col
        for(int i=0;i<m;i++) {
            // first col
            if(vis[i][0]==0 && grid[i][0]==1) {
                dfs(grid,vis,i,0);
            }

            // last col
            if(vis[i][n-1]==0 && grid[i][n-1]==1) {
                dfs(grid,vis,i,n-1);
            }
        }

        int count=0;
        for(int i=0;i<m;i++) {
            for(int j=0;j<n;j++) {
                if(vis[i][j]==0 && grid[i][j]==1) {
                    count++;
                }
            }
        }
        return count;
    }
}

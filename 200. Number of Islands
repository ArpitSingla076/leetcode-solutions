----------------------- USING BFS -------------------------------
class Pair {
    int row;
    int col;

    public Pair(int row, int col) {
        this.row = row;
        this.col = col;
    }
}

class Solution {
    public void bfs(int row, int col, int[][] vis, char[][] grid) {
        vis[row][col] = 1;
        Queue<Pair> q = new LinkedList<>();
        q.add(new Pair(row, col));
        int m = grid.length;
        int n = grid[0].length;
        while (!q.isEmpty()) {
            int r = q.peek().row;
            int c = q.peek().col;
            q.remove();

            // ---  traverse in the neig and mark them if its a land --- (8-direction)

            // int[] drow = {-1,-1,-1,0,0,1,1,1};
            // int[] dcol = {-1,0,1,-1,1,-1,0,1};

            // for(int i=0;i<8;i++) {
            //     int nrow = r+drow[i];
            //     int ncol = c+dcol[i];
            // }

            // -- 4-directional neighbours (up, right, down, left) --
            int[] drow = {-1,0,1,0};
            int[] dcol = {0,1,0,-1};

            for (int i=0;i<4;i++) {
                int nrow = r+drow[i];
                int ncol = c+dcol[i];

                if (nrow >= 0 && nrow<m && ncol>=0 && ncol<n
                    && grid[nrow][ncol] == '1' && vis[nrow][ncol] == 0) {
                    vis[nrow][ncol] = 1;
                    q.add(new Pair(nrow, ncol));
                }
            }
        }
    }

    public int numIslands(char[][] grid) {
        int m = grid.length;
        int n = grid[0].length;
        int vis[][] = new int[m][n];
        int count = 0;
        for (int row=0;row<m;row++) {
            for (int col=0;col<n;col++) {
                if (vis[row][col]==0 && grid[row][col]=='1') {
                    count++;
                    bfs(row, col, vis, grid);
                }
            }
        }
        return count;
    }




----------------------- USING DFS -----------------------------------



















}

class Pair{
    int dist;
    int val;
    public Pair(int dist,int val) {
        this.dist = dist;
        this.val = val;
    }
}

class Solution {
    public List<Integer> findClosestElements(int[] arr, int k, int x) {
        List<Integer> ans = new ArrayList<>();
        PriorityQueue<Pair> maxheap = new PriorityQueue<>((a,b) -> {
            if(a.dist != b.dist) return b.dist - a.dist;
            return b.val - a.val;
        });
        int n = arr.length;
        for(int i=0;i<n;i++) {
            int dist = Math.abs(arr[i]-x);
            maxheap.add(new Pair(dist,arr[i]));
            if(maxheap.size()>k) {
                maxheap.poll();
            }
        }   
        while(!maxheap.isEmpty()) {
            ans.add(maxheap.poll().val);
        }
        Collections.sort(ans);
        return ans;
    }
}

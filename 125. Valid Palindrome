class Solution {
    public boolean isPalin(String s) {
        int n = s.length();
        int start = 0;
        int end = n-1;
        while(start<=end) {
            if(s.charAt(start)!=s.charAt(end)) {
                return false;
            }
            start++;
            end--;
        }
        return true;
    }

    public boolean isPalindrome(String s) {
        s = s.toLowerCase();
        StringBuilder sb = new StringBuilder();
        int n = s.length();
        for(int i=0;i<n;i++) {
            char ch = s.charAt(i);
            if(ch>='a' && ch<='z' || ch>='0' && ch<='9') sb.append(ch);
        }
        boolean ans = isPalin(sb.toString());
        if(ans) return true;
        else return false;
    }
}
